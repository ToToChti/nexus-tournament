<!DOCTYPE html>
<html lang="fr">
<head>
    <%- include('../includes/metadata.ejs', {user}) %>

    <title>Détails du Tournoi</title>
    <link rel="stylesheet" href="../admin/admin_new_tournament.css">
</head>
<body>
    <%- include('../includes/header.ejs', {user}) %>
    <div class="container mt-5">
        <div class="text-center mb-4">
            <h1 class="header-title">Creer un tournoi</h1>
        </div>
        <form class="row" method="post" action="../createTournament">
            <!-- Formulaire de gauche -->
            <div class="col-md-8">
                <div class="form-box p-4">
                    <h4>Nom du tournoi</h4>
                    <input name="nameTournament" type="text" class="form-control mb-3" placeholder="Nom du tournoi">

                    <p><strong>Jeu :</strong></p>
                    <input name="game" type="text" class="form-control mb-3" placeholder="Jeu">

                    <p><strong>Nombre de Participants :</strong></p>
                    <input name="nbMaxPlayer" type="number" class="form-control mb-3" placeholder="Nombre de Participants">

                    <p><strong>Nombre de Spectateurs :</strong></p>
                    <input name="nbMaxSpectator" type="number" class="form-control mb-3" placeholder="Nombre de Spectateurs">

                    <p><strong>Lieu :</strong></p>
                    <input name="place" type="text" class="form-control mb-3" placeholder="Lieu">

                    <p><strong>Date :</strong></p>
                    <input name="date" type="date" class="form-control mb-3">

                    <p><strong>Prix Minimal à l'inscription :</strong></p>
                    <input name="priceInscription" type="number" step="0.01" class="form-control mb-3" placeholder="Prix Minimal à l'inscription">

                    <p><strong>Arbitres :</strong></p>
                    <input name="arbiter" type="text" class="form-control mb-3" placeholder="Arbitres">

                    <p><strong>Sponsors :</strong>
                        <input name="sponsor" type="text" class="form-control d-inline-block w-25" placeholder="Sponsor">
                        à hauteur de : 
                        <input name="sponsorValue" type="number" step="0.01" class="form-control d-inline-block w-25" placeholder="€">
                    </p>

                    <p><strong>Commentateurs :</strong></p>
                    <input name="commentator" type="text" class="form-control mb-3" placeholder="Commentateurs">
                </div>
            </div>

            <!-- Section droite -->
            <div class="col-md-4 text-center">
                <div class="tournament-image-box mb-4">
                    <p>Image du tournoi</p>
                </div>
                <a href="/admin">
                    <button class="btn btn-secondary w-100 mb-2" type="submit" onclick='console.log("cense enregistrer")'>Enregistrer</button>
                </a> 
                <a href="/admin" class="btn btn-danger">Supprimer</a>
            </div>
        </form>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

