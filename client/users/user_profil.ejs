<!DOCTYPE html>
<html lang="fr">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="page profile">
    <meta property="og:url" content="https://nexus-tournament.glitch.me/">
    <meta property="theme-color" content="#1588F5">

    <link rel="stylesheet" href="users/user_profil.css">
    
    
    
    <title>NEXUS Tournament - Home</title>
    <script>
        document.addEventListener("DOMContentLoaded", async () => {
            try {
                const url = 'http://localhost:3000/displayTournamentHome'; // URL de la requête
                const response = await fetch(url, {
                    method: "POST",
                    headers: {
                        "Content-Type": "application/json"
                    },
                    body: JSON.stringify({}) // Corps de la requête (peut être vide ici)
                });

                if (response.ok) {
                    const result = await response.json();

                    // Exemple de mise à jour de la page avec les données reçues
                    const scrollingBox = document.querySelector(".scrolling-box");
                    result.tournaments.forEach(tournament => {
                        const card = document.createElement("div");
                        card.className = "card";
                        
                        // Crée un bouton pour chaque tournoi
                    const button = document.createElement("button");
                    button.className = "card-button";
                    button.innerHTML = `
                        <h5 class="card-title">${tournament.Nom}</h5>
                        <p class="card-text">Lieu: <em>${tournament.Lieu}</em></p>
                        <p class="card-text">Date: <em>${tournament.Date}</em></p>
                    `;

                    // Ajoute un événement de clic pour rediriger
                    button.addEventListener("click", () => {
                        window.location.href = `Tournament_display?id=${tournament._id}`;
                    });

                    // Ajoute le bouton à la carte
                    card.appendChild(button);
                    scrollingBox.appendChild(card);
                });
                } else {
                    console.error("Erreur lors de la requête :", response.statusText);
                }
            } catch (error) {
                console.error("Une erreur s'est produite :", error);
            }
        });
    </script>
</head>

<body>

    <container>
        <div class="errorBox">
            <div class="big_error">NEXUS</div>
            <div class="small_msg_error">tournament</div>
        </div>
    </container>

    <h1 class="titre_tournois">Tournois à venir</h1>
    <div class="scrolling-box">
            
    </div>

</body>

</html>