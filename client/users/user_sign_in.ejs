                            <input 
                                type="password" 
                                class="textbox" 
                                name="password" 
                                placeholder="Mot de passe" 
                                id="password" 
                                required >
                            <label for="password">Mot de Passe</label>
                            <span class="focus-border"></span>
                        </div>
                    </div>

                    
                </form>
            </div>

            <div class="connecter-container">
                <button type="submit" form="login-form" class="connecter">Se connecter</button>
                <p class="pas_de_compte">Pas encore de compte ?</p>
                <a href="signup.ejs">
                    <button class="inscrire">Inscrivez-vous</button>
                </a>
